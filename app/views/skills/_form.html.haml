= form_for @skill do |f|
  - if @skill.errors.any?
    #error_explanation
      %h2= "#{pluralize(@skill.errors.count, "error")} prohibited this skill from being saved:"
      %ul
        - @skill.errors.full_messages.each do |msg|
          %li= msg
  .controls
    = f.label :description
    = f.text_field :description
    %h3 People
    =render partial: "shared/habtm_form", locals: {object: @skill, association: "person", attribute: "name"}
  .actions
    = f.submit 'Save'
